<UserControl x:Class="pacman.StackSeparator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="3" d:DesignWidth="400">
	<Viewbox Stretch="Fill">
		<Rectangle Height="3" Width="100" StrokeThickness="0">
			<Rectangle.Fill>
				<LinearGradientBrush EndPoint="0,1" MappingMode="RelativeToBoundingBox" StartPoint="1,0">
					<GradientStop Color="#FF000000"/>
					<GradientStop Color="DarkGray" Offset="0.5"/>
					<GradientStop Color="#FF000000" Offset="1"/>
				</LinearGradientBrush>
			</Rectangle.Fill>
		</Rectangle>
		</Viewbox>

</UserControl>
